<div class="sixteen columns table-responsive">
  <h3><%= title %></h3>
  <table class="index table">
    <thead>
      <tr>
        <% hash.to_a.sort.each do |key, value| %>
          <% next if key.include?('fee') || key.include?('invoice') || key.include?('livemode') %>
          <th><%= key.humanize.titleize %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% hash.to_a.sort.each do |key, value| %>
          <% next if key.include?('fee') || key.include?('invoice') || key.include?('livemode') %>
          <td>
              <% if value.is_a?(Hash) %>
                  <%= debug value %>
              <% else %>
                  <%= value %>
              <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
